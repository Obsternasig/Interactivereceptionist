        <style>


            * {
                box-sizing: border-box;
            }

            body {
                background-color: #E6E9ED;
            }

            .Sidebox {
                background-color: #F3BB1B;
                color: white;
                display: block;                
                border-radius: 20%;
                box-shadow: 7px 7px 5px grey;
                font-family: oswald;
                font-size: 100%;
                padding: 3vh;
            }

            .SideboxFirma {
                background-color: grey;
                color: white;
                display: block;                
                border-radius: 20%;
                box-shadow: 7px 7px 5px grey;
                font-family: oswald;
                font-size: 100%;
                padding: 3vh;
            }


            .Sidetext {
                font-family: oswald;
                font-size: 100%;
                text-align:center;                
            }

            .search_box {
                font-family: oswald;
                border-style: solid;
                border-radius: 10px;
                background-color: #666D77;
                border-color: #666D77;
                width: 100%;
                height: 5%;
                color: white;
            }

            .søgeknap {
                border-style: none;
                background: none;
                outline: none;
                color: white;
                width: 100%;
                margin: 0% 0% 0% 2%;
            }

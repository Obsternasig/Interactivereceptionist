@page
@model RegisterModel
@{
    ViewData["Title"] = "Opret Bruger";
}
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

    <head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link rel="stylesheet" href="~/css/core.css" />
        <link href="https://fonts.googleapis.com/css?family=Oswald" rel="stylesheet">
        <title>Startside</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>

@if (SignInManager.IsSignedIn(User))
{   
<div class="container-fluid">
    <div class="row">
        <div class="col-12 text-center">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h1 class="headline mt-5">Register ny admin</h1>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group text-center">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <label asp-for="Input.Password">Kodeord</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group text-center mb-4">
                    <label asp-for="Input.ConfirmPassword">Bekræft kodeord</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-block btn-lg novifont noviyellow button text-center">Register</button>
            </form>
        </div>
    </div>
</div>
}

else

{
    <div class="row">
        <div class="col-12">
            <p class="headline text-center novifont">
                Du skal være logget ind for at oprette bruger
            </p>
        </div>

    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

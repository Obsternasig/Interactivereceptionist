@page "{id:int}"
@model LoginOgInfo.Pages.LokalerPage.DetailsModel

@{
    ViewData["Title"] = "Lokale Detaljer";
}

@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="\css/core.css" />
    <link href="https://fonts.googleapis.com/css?family=Oswald" rel="stylesheet">
    <title>@ViewData["title"]</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

</head>

@if (SignInManager.IsSignedIn(User))
{
<div class="container-fluid">
    <div class="row mt-5">
        <div class="col-3">
            <img src="\Pictures/hus.png" onclick="window.location.href = '/index'" class="icons img-fluid mr-1" ;>
            <img src="\Pictures/venstre.png" onclick="javascript:history.go(-1)" class="icons img-fluid mr-1" />
            <img src="\Pictures/højre.png" onclick="javascript:history.go(+1)" class="icons img-fluid" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <hr class="mb-4 orangeline noviyellow" />
        <div class="row">
            <div class="col-12">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.LokalerInfo.Lokalenummer)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.LokalerInfo.Lokalenummer)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.LokalerInfo.Lejer)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.LokalerInfo.Lejer)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.LokalerInfo.Medarbejderantal)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.LokalerInfo.Medarbejderantal)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>
<div>
    <a class="btn btn-primary btn-lg novifont noviyellow text-center create shadow" asp-page="./Edit" asp-route-id="@Model.LokalerInfo.ID">Edit</a>
    <a class="btn btn-primary btn-lg novifont noviyellow text-center create shadow" asp-page="./Index">Back to List</a>
</div>
}

else
{

<body>
    <div class="container-fluid">

        <div class="row">
            <div class="col">
                <p class="headline novifont text-center">
                    @Html.DisplayFor(model => model.LokalerInfo.Lokalenummer)
                </p>
            </div>
        </div>

        <div class="row">
            <div class="col-3">
                <img src="\Pictures/hus.png" onclick="window.location.href = '/index'" class="icons img-fluid mr-1" ;>
                <img src="\Pictures/venstre.png" onclick="javascript:history.go(-1);" class="icons img-fluid mr-1" />
                <img src="\Pictures/højre.png" onclick="javascript:history.go(+1);" class="icons img-fluid" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <hr class="mb-4 orangeline noviyellow" />
        </div>
    </div>

    <div class="row">
        <div class="col-2 text-center novifont">
            <button type="button" class="btn btn-primary btn-lg noviyellow mb-4 button btn-block shadow" onclick="window.location.href = '/search'">
                Søg
            </button>
            <button type="button" class="btn btn-primary btn-lg noviyellow mb-4 button btn-block shadow" onclick="window.location.href = '/Oversigtskort'">
                Oversigtskort
            </button>
            <button type="button" class="btn btn-primary btn-lg noviyellow mb-4 button btn-block shadow" onclick="window.location.href = '/ParkeringPage/Create'">
                Parkering
            </button>
            <button type="button" class="btn btn-primary btn-lg noviyellow mb-4 button btn-block shadow" onclick="window.location.href = '/faq'">
                Faq
            </button>
        </div>

        <div class="col-10">
            <div class="row">
                <div class="col-6">
                    <p class="normaltext novifont">
                        Lokalenummer: @Html.DisplayFor(model => model.LokalerInfo.Lokalenummer)<br />
                        Lejer: @Html.DisplayFor(model => model.LokalerInfo.Lejer)<br />
                        Medarbejderantal: @Html.DisplayFor(model => model.LokalerInfo.Medarbejderantal)
                    </p>
                </div>
                <div class="col-6">
                    <img alt="Novi Logo" src="/Pictures/novi.png" class="float-right logo2" />
                </div>
            </div>
            <div class="row">
                <div class="col-12 findsomethingbox mt-4 mb-5">
                    <p class="findsomethingboxheader novifont">
                        Sådan finder du @Html.DisplayFor(model => model.LokalerInfo.Lokalenummer)
                    </p>
                    <p class="normaltext novifont">
                        @Html.DisplayFor(model => model.LokalerInfo.Medarbejderantal)
                    </p>
                </div>
            </div>
        </div>
    </div>

</body>
}

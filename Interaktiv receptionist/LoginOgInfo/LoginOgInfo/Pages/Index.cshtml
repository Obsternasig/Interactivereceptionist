}

@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/core.css" />
    <link href="https://fonts.googleapis.com/css?family=Oswald" rel="stylesheet">
    <title>Startside</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>

<!--
<textarea id="myText">
    Din aftale er ankommet
</textarea>
    <button onclick="sendMail(); return false">Send</button>
-->

    <div class="container-fluid">
        <div class="row">
            <div class="col float-left logo3">
                <img src="\Pictures/novi.png" />
            </div>
        </div>

        <div class="row">
            <div class="col mx-auto">
                <div class="headline novifont text-center">
                    <p>
                        Velkommen til Novi
                    </p>
                    <p>
                        Mangler du hjælp til noget?
                    </p>
                </div>
            </div>
        </div><br>

        <div class="row">
            <div class="col-12 mt-5 text-center">
                <button type="button" class="btn btn-primary btn-lg novifont noviyellow button text-center"
                        onclick="window.location.href = '/VirksomhederPage'">
                    Tryk her
                </button>
            </div>
        </div>
        <div class="row">
            <ul class="navbar-nav">
                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
                    </li>
                    <li class="nav-item">
                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                        </form>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/AdminNavi">Rediger i Databasen</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark mt-5" asp-area="Identity" asp-page="/Account/Login">Login</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</body>


@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<head>
    <title>Velkommen til</title>
    <style>
        * {
            box-sizing: border-box;
        }
        body {
            background-color: #E6E9ED;
        }
        .Sidebox {
            background-color: #F3BB1B;
            color: white;
            display: block;
            width: 9%;
            height: 10%;
            border-radius: 10%;
            left: 1%; 
            margin: 13px;
            box-shadow: 7px 7px 5px grey;
            font-family: oswald;
            font-size: 100%;
            text-align: center;
        }
        .Sidetext{
            font-family: oswald;
            font-size: 100%;
            position: relative;
            top: 50%;
            transform: translateY(-50%);
        }
        .search_box {
            font-family: oswald;
            border-style: solid;
            border-radius: 10px;
            background-color: #666D77;
            border-color: #666D77;
            float: right;
            margin: 11% 1% 0% -70%;
            width: 100%;
            height: 5%;
            color: white;
        }
        .søgeknap{
            border-style: none;
            background: none;
            outline: none;
            color: white;
            width: 100%;
            margin: 0% 0% 0% 2%;
        }
        
    </style>
</head>

<body>
<h1 style="position: fixed; left: 45%; top: 1%; font-family: oswald; font-size: 420%; color: #8D9092;">Hvad vil du gerne finde?</h1>
<img src="https://i.imgur.com/7xZqyQ1.png" style="width: 70px; height: 70px; margin: 9% 0% 0% -33%;" alt="image error";>
<img src="https://i.imgur.com/qTQ0t0I.png" style="width: 70px; height: 70px; margin: 9% 0% 1% 2%"/>
<img src="https://i.imgur.com/JJ1ZkjE.png" style="width: 70px; height: 70px; margin: 9% 0% 1% 2%"/>
<div class="search_box">
    <input type="text" placeholder="Search.." class="søgeknap">
</div>
<hr style="position: fixed; border-top: 5px solid #F3BB1B; padding: 50%; left: 0%; top: 18%;" />
<div class="Sidebox" style="position: fixed; top: 22%; padding: 14px;">
    <p class="Sidetext">
        Søg efter <br /> virksomhed
    </p>
</div>
<div class="Sidebox" style="position: fixed; top: 35%; padding: 16px;">
    <p class="Sidetext">
        Søg efter <br /> lokale
    </p>
</div>
    
<div class="Sidebox" style="position: fixed; top: 48%; padding: 30px; ">
    <p class="Sidetext">
        FAQ
    </p>
</div>
</body>


